# Application
APP_NAME=SupportHub Service

# CORS (comma-separated). Use explicit origins in production.
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Security
# Set a strong random value in production and pass as header: X-API-Key: <value>
API_KEY=

# Database
# For Docker Compose dev:
DATABASE_URL=postgresql://supporthub_user:password@db:5432/supporthub_db
# Example local (outside compose):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/supporthub_db

# Redis
REDIS_URL=redis://redis:6379/0

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=no-reply@supporthub.local
SUPPORT_TEAM_EMAIL=support@example.com

# Chat (Slack)
# If provided, chat notifications go to Slack via webhook
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#support
SLACK_USERNAME=SupportHub Service
SLACK_ICON_EMOJI=:telephone_receiver:

# Phone
SUPPORT_FORWARD_NUMBER=
